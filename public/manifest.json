{
  "name": "Amazon Schedule Monitor",
  "version": "1.0",
  "description": "",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "amazon-icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "amazon-icon.png",
    "32": "amazon-icon.png",
    "48": "amazon-icon.png",
    "64": "amazon-icon.png",
    "128": "amazon-icon.png"
  },
  "permissions": [
    "storage"
  ]
}